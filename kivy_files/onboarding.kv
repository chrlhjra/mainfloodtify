<Onboarding>
    name: "onboarding"    
    MDFloatLayout:
        md_bg_color: 230/255, 244/255, 241/255, 1
        Image:
            source: "images/Hand.png"
            size_hint: 0.50,0.50
            pos_hint:{'center_x': 0.5, "center_y": .77}
            allow_stretch: 0.9, 0.9

        MDCard:
            size_hint_y: None
			height: 170 
			size_hint_x: 0.95
			elevation: 2.5
			pos_hint: {"center_x": .5, "center_y": .4}
            MDLabel:
                text:"Easy To Use"
                font_name: "Fonts/Poppins-Semibold.ttf"
				font_size: 20
                theme_text_color: "Primary"
				halign: "center"
				pos_hint: {"center_x": .5, "center_y": .8}
		MDLabel:
			text:"Very easy to use and easy to understand for those of you who are beginners"
            font_name: "Fonts/Poppins-Semibold.ttf"
			font_size: 16
			theme_text_color: "Secondary"
			size_hint_x:None
			width: 300
			halign: "center"
			pos_hint: {"center_x": .5, "center_y": .37}
    MDFillRoundFlatButton:
        text: "GET STARTED"
        theme_text_color: "Custom"
        font_name: "Fonts/Poppins-Semibold.ttf"
        font_size: 14
        text_color: "white"
        pos_hint: {"center_x": .5, "center_y": .200}
		size_hint_x: 0.75
        size_hint_y: None
        md_bg_color: 0/255, 108/255, 133/255, 1
